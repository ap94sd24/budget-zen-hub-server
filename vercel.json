{
  "builds": [
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/wsgi.py"
    }
  ],
  "crons": [
    {
      "path": "/scripts/follower_suggestions",
      "schedule": "0 19 * * *"
    },
    {
      "path": "/scripts/trends",
      "schedule": "0 19 * * *"
    }
  ]
}
