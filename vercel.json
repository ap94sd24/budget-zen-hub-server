{
  "builds": [
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/wsgi.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/generate_follower_suggestions/",
      "schedule": "0 7 * * 6"
    },
    {
      "path": "/api/posts/cron/generate_trends/",
      "schedule": "0 7 * * 0-5"
    }
  ]
}
